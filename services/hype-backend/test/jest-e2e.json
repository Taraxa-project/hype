{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@taraxa-hype/pool": "<rootDir>/../src/modules/pool",
    "@taraxa-hype/auth": "<rootDir>/../src/modules/auth",
    "@taraxa-hype/user": "<rootDir>/../src/modules/user",
    "@taraxa-hype/config": "<rootDir>/../config"
  }
}
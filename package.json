{
  "name": "hype_project",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "install": "cd client && yarn && cd ../server && yarn",
    "start": "concurrently \"yarn start-client && start-server\"",
    "start-client": "cd client && yarn start",
    "build-client": "cd client && yarn build",
    "start-server": "cd server && yarn start",
    "storybook": "cd client && yarn storybook",
    "build-storybook": "yarn client && yarn build-storybook",
    "format": "prettier . --write && eslint --fix '*.{js,jsx,ts,tsx}'",
    "lint": "eslint client && eslint server",
    "postinstall": "husky install"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint",
      "prettier --write"
    ]
  },
  "dependencies": {
    "husky": "^7.0.4"
  },
  "devDependencies": {
    "@typescript-eslint/parser": "^5.14.0",
    "concurrently": "^7.0.0",
    "eslint": "^8.11.0",
    "eslint-config-airbnb-typescript-prettier": "^5.0.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "lint-staged": "^12.3.5",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1"
  }
}
